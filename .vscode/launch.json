{
    "configurations": [
        {
            /* php -t www -S localhost:8080 */
            "name": "(!) Launch built-in server and debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "localhost:8080",
                "-t",
                "www"
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}